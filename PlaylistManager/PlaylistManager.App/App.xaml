<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PlaylistManager.App"
             xmlns:converters="clr-namespace:PlaylistManager.App.Converters"
             x:Class="PlaylistManager.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:EditModeToTextConverter x:Key="EditModeToTextConverter"/>
            <converters:InvertBoolConverter x:Key="InvertBoolConverter"/>
            <converters:DurationToStringConverter x:Key="DurationToStringConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
