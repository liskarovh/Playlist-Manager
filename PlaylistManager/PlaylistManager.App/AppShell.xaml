<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:v="clr-namespace:PlaylistManager.App.Views"
    x:Class="PlaylistManager.App.AppShell"
    x:Name="AppShellRoot"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBehavior="Disabled">


    <ShellContent ContentTemplate="{DataTemplate v:SelectManagerView}" Route="select" Title="SelectManagerView"/>
    <ShellContent ContentTemplate="{DataTemplate v:PlaylistOverview}" Route="playlists" Title="PlaylistOverview"/>
    <ShellContent ContentTemplate="{DataTemplate v:PlaylistSelected}" Route="media" Title="PlaylistSelected"/>
    <ShellContent ContentTemplate="{DataTemplate v:MediumSelected}" Route="mediumDetail" Title="MediumSelected"/>

</Shell>
