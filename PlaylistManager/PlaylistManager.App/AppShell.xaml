<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:v="clr-namespace:PlaylistManager.App.Views"
    x:Class="PlaylistManager.App.AppShell"
    x:Name="AppShellRoot"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBackdrop="Transparent">
    <!-- Shell.FlyoutBehavior="Disabled"-->

    <ShellContent ContentTemplate="{DataTemplate v:SelectManagerView}" Route="select" Title="SelectManagerView"/>
    <ShellContent ContentTemplate="{DataTemplate v:PlaylistOverviewView}" Route="playlists" Title="PlaylistOverviewView"/>
    <ShellContent ContentTemplate="{DataTemplate v:PlaylistSelectedView}" Route="media" Title="PlaylistSelectedView"/>
    <ShellContent ContentTemplate="{DataTemplate v:MediumSelectedView}" Route="mediumDetail" Title="MediumSelectedView"/>
</Shell>
